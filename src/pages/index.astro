---
import MainLayout from "../layouts/MainLayout.astro";
import Logo from "../components/Header/Logo.astro";
---

<MainLayout title="Astro">
	<main class="main">
		<h1>Demo astro blog</h1>
		<Logo scale />
		<p>
			Blog with astro and dummyjson.com
		</p>
	</main>
</MainLayout>

<style>
	.main {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	h1 {
		color: var(--color-text);
		margin-bottom: 100px;
	}

	p {
		margin-top: 100px;
	}
</style>
