---
const { label, url } = Astro.props.item;
---

<li class="menu-item">
  <a href={url}>{label}</a>
</li>

<style>
  .menu-item {
    
  }

  a {
    position: relative;
    display: block;
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.3s;
  }

  a::before {
    content: "";
    display: block;
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    margin: auto;
    width: 0;
    height: 1px;
    border-bottom: 1px solid var(--color-text);
    transition: all 0.3s;
  }

  a:hover {
    color: var(--color-primary);
    opacity: .8;
  }

  a:hover::before {
    width: 100%;
  }
</style>